{
  "name": "lit-context",
  "version": "0.0.1",
  "author": "doriandres",
  "license": "MIT",
  "scripts": {
    "start": "parcel index.html --open",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "build": "rimraf dist/ && tsdx build --name lit-context --format esm,cjs,umd"
  },
  "husky": {
      "hooks": {
          "pre-commit": "tsdx lint"
      }
  },
  "prettier": {
      "printWidth": 80,
      "semi": true,
      "singleQuote": true,
      "trailingComma": "es5"
  },
  "dependencies": {
    "lit-html": "^1.0.0",
    "lit-element": "^2.0.1"
  },
  "devDependencies": {
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2",
    "tsdx": "^0.12.3",
    "typescript": "^3.8.3"
  },
  "browserslist": [
    "last 1 chrome version"
  ],
  "module": "dist/lit-context.esm.js",
  "main": "dist/index.js",
  "umd:main": "dist/lit-context.umd.production.min.js",
  "unpkg": "dist/lit-context.umd.production.min.js",
  "jsdelivr": "dist/lit-context.umd.production.min.js",
  "source": "src/lit-context.ts"
}
